generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String      @id @default(cuid())
  email        String      @unique
  passwordHash String
  name         String
  role         Role        @default(VIEWER)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  exportJobs   ExportJob[]
  listings     Listing[]
  sessions     Session[]

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Listing {
  id                  String               @id @default(cuid())
  slug                String               @unique
  sku                 String?              @unique
  status              ListingStatus        @default(DRAFT)
  type                PropertyType
  saleType            SaleType
  company             String               @default("GÃ¼zel Invest")
  city                String
  district            String
  neighborhood        String?
  address             String?
  googleMapsLink      String?
  latitude            Float?
  longitude           Float?
  price               Decimal
  currency            String               @default("EUR")
  area                Int
  rooms               String?
  bedrooms            Int?
  bathrooms           Int?
  wcCount             Int?
  floor               Int?
  totalFloors         Int?
  buildYear           Int?
  heating             String?
  furnished           Boolean              @default(false)
  balcony             Boolean              @default(false)
  garden              Boolean              @default(false)
  pool                Boolean              @default(false)
  parking             Boolean              @default(false)
  elevator            Boolean              @default(false)
  security            Boolean              @default(false)
  seaView             Boolean              @default(false)
  parcelNo            String?
  emsal               Float?
  zoningStatus        String?
  groundFloorArea     Int?
  basementArea        Int?
  hasWaterSource      Boolean              @default(false)
  hasFruitTrees       Boolean              @default(false)
  existingStructure   String?
  citizenshipEligible Boolean              @default(false)
  residenceEligible   Boolean              @default(false)
  publishToHepsiemlak Boolean              @default(false)
  publishToSahibinden Boolean              @default(false)
  aiTags              String[]
  aiProcessedAt       DateTime?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  publishedAt         DateTime?
  createdById         String
  tags                ListingTag[]
  translations        ListingTranslation[]
  createdBy           User                 @relation(fields: [createdById], references: [id])
  media               Media[]
  syncLogs            SyncLog[]

  @@index([status])
  @@index([type])
  @@index([saleType])
  @@index([sku])
  @@index([city, district])
  @@index([price])
  @@map("listings")
}

model ListingCompanyOption {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("listing_company_options")
}

model ListingSerial {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  @@map("listing_serials")
}

model Tag {
  id        String       @id @default(cuid())
  name      String       @unique
  color     String       @default("#EC6803")
  createdAt DateTime     @default(now())
  listings  ListingTag[]

  @@map("tags")
}

model ListingTag {
  id        String  @id @default(cuid())
  listingId String
  tagId     String
  listing   Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)
  tag       Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([listingId, tagId])
  @@map("listing_tags")
}

model ListingTranslation {
  id          String   @id @default(cuid())
  listingId   String
  locale      String
  title       String
  description String
  features    String[]
  listing     Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@unique([listingId, locale])
  @@index([locale])
  @@map("listing_translations")
}

model Media {
  id           String    @id @default(cuid())
  listingId    String
  url          String
  thumbnailUrl String?
  type         MediaType @default(IMAGE)
  order        Int       @default(0)
  isCover      Boolean   @default(false)
  aiTags       String[]
  width        Int?
  height       Int?
  size         Int?
  createdAt    DateTime  @default(now())
  listing      Listing   @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@index([listingId, order])
  @@map("media")
}

model SyncLog {
  id           String     @id @default(cuid())
  listingId    String
  platform     String     @default("sahibinden")
  action       String
  status       SyncStatus
  externalId   String?
  errorMessage String?
  requestData  Json?
  responseData Json?
  createdAt    DateTime   @default(now())
  listing      Listing    @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@index([listingId])
  @@index([status])
  @@map("sync_logs")
}

model ExportJob {
  id          String       @id @default(cuid())
  type        String       @default("csv")
  status      ExportStatus @default(PENDING)
  filters     Json?
  fileUrl     String?
  fileName    String?
  rowCount    Int?
  createdById String
  createdAt   DateTime     @default(now())
  completedAt DateTime?
  error       String?
  createdBy   User         @relation(fields: [createdById], references: [id])

  @@index([status])
  @@map("export_jobs")
}

model ContactSubmission {
  id        String    @id @default(cuid())
  listingId String?
  name      String
  email     String
  phone     String?
  message   String
  locale    String    @default("tr")
  source    String    @default("website")
  createdAt DateTime  @default(now())
  read      Boolean   @default(false)
  readAt    DateTime?

  @@index([createdAt])
  @@index([read])
  @@map("contact_submissions")
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

enum ListingStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
  REMOVED
}

enum PropertyType {
  APARTMENT
  VILLA
  PENTHOUSE
  LAND
  COMMERCIAL
  OFFICE
  SHOP
  FARM
}

enum SaleType {
  SALE
  RENT
}

enum MediaType {
  IMAGE
  VIDEO
}

enum SyncStatus {
  PENDING
  SYNCING
  SUCCESS
  FAILED
}

enum ExportStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}
