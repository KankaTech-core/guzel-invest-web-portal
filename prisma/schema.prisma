generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String                @id @default(cuid())
  email            String                @unique
  passwordHash     String
  name             String
  role             Role                  @default(VIEWER)
  createdAt        DateTime              @default(now())
  updatedAt        DateTime              @updatedAt
  articles         Article[]
  exportJobs       ExportJob[]
  listings         Listing[]
  sessions         Session[]
  feedbackMessages SiteFeedbackMessage[] @relation("SiteFeedbackMessageAuthor")
  feedbackThreads  SiteFeedbackThread[]  @relation("SiteFeedbackThreadCreatedBy")

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Listing {
  id                  String               @id @default(cuid())
  slug                String               @unique
  sku                 String?              @unique
  status              ListingStatus        @default(DRAFT)
  type                PropertyType
  saleType            SaleType
  company             String               @default("GÃ¼zel Invest")
  city                String
  district            String
  neighborhood        String?
  address             String?
  googleMapsLink      String?
  latitude            Float?
  longitude           Float?
  price               Decimal
  currency            String               @default("EUR")
  area                Int
  rooms               String?
  bedrooms            Int?
  bathrooms           Int?
  wcCount             Int?
  floor               Int?
  totalFloors         Int?
  buildYear           Int?
  heating             String?
  furnished           Boolean              @default(false)
  balcony             Boolean              @default(false)
  garden              Boolean              @default(false)
  pool                Boolean              @default(false)
  parking             Boolean              @default(false)
  elevator            Boolean              @default(false)
  security            Boolean              @default(false)
  seaView             Boolean              @default(false)
  parcelNo            String?
  emsal               Float?
  zoningStatus        String?
  groundFloorArea     Int?
  basementArea        Int?
  hasWaterSource      Boolean              @default(false)
  hasFruitTrees       Boolean              @default(false)
  existingStructure   String?
  citizenshipEligible Boolean              @default(false)
  residenceEligible   Boolean              @default(false)
  publishToHepsiemlak Boolean              @default(false)
  publishToSahibinden Boolean              @default(false)
  showOnHomepageHero  Boolean              @default(false)
  homepageHeroSlot    Int?                 @unique
  homepageProjectSlot Int?
  aiTags              String[]
  aiProcessedAt       DateTime?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  publishedAt         DateTime?
  createdById         String
  deliveryDate        String?
  isProject           Boolean              @default(false)
  projectType         String?
  projectFeatures     ProjectFeature[]
  customGalleries     CustomGallery[]
  projectUnits        ProjectUnit[]
  faqs                ListingFAQ[]
  floorPlans          FloorPlan[]
  tags                ListingTag[]
  translations        ListingTranslation[]
  createdBy           User                 @relation(fields: [createdById], references: [id])
  media               Media[]
  syncLogs            SyncLog[]

  @@index([status])
  @@index([type])
  @@index([saleType])
  @@index([sku])
  @@index([city, district])
  @@index([price])
  @@index([showOnHomepageHero, status])
  @@index([homepageHeroSlot, status])
  @@index([homepageProjectSlot, status])
  @@map("listings")
}

model Article {
  id                String        @id @default(cuid())
  slug              String        @unique
  status            ArticleStatus @default(DRAFT)
  title             String
  excerpt           String?
  content           String
  category          String?
  tags              String[]      @default([])
  coverImageUrl     String?
  coverThumbnailUrl String?
  publishedAt       DateTime?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  createdById       String
  createdBy         User          @relation(fields: [createdById], references: [id])

  @@index([status])
  @@index([publishedAt])
  @@index([createdAt])
  @@map("articles")
}

model ListingCompanyOption {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("listing_company_options")
}

model HomepageSetting {
  id           String   @id @default("default")
  heroVideoUrl String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("homepage_settings")
}

model ListingSerial {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  @@map("listing_serials")
}

model Tag {
  id        String       @id @default(cuid())
  name      String       @unique
  color     String       @default("#EC6803")
  createdAt DateTime     @default(now())
  listings  ListingTag[]

  @@map("tags")
}

model ListingTag {
  id        String  @id @default(cuid())
  listingId String
  tagId     String
  listing   Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)
  tag       Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([listingId, tagId])
  @@map("listing_tags")
}

model ListingTranslation {
  id              String   @id @default(cuid())
  listingId       String
  locale          String
  title           String
  description     String
  features        String[]
  promoVideoTitle String?
  listing         Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@unique([listingId, locale])
  @@index([locale])
  @@map("listing_translations")
}

model Media {
  id              String         @id @default(cuid())
  listingId       String
  url             String
  thumbnailUrl    String?
  type            MediaType      @default(IMAGE)
  order           Int            @default(0)
  isCover         Boolean        @default(false)
  aiTags          String[]
  width           Int?
  height          Int?
  size            Int?
  createdAt       DateTime       @default(now())
  category        String?
  customGalleryId String?
  projectUnitId   String?
  customGallery   CustomGallery? @relation(fields: [customGalleryId], references: [id], onDelete: Cascade)
  listing         Listing        @relation(fields: [listingId], references: [id], onDelete: Cascade)
  projectUnit     ProjectUnit?   @relation(fields: [projectUnitId], references: [id], onDelete: Cascade)

  @@index([listingId, order])
  @@map("media")
}

model SyncLog {
  id           String     @id @default(cuid())
  listingId    String
  platform     String     @default("sahibinden")
  action       String
  status       SyncStatus
  externalId   String?
  errorMessage String?
  requestData  Json?
  responseData Json?
  createdAt    DateTime   @default(now())
  listing      Listing    @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@index([listingId])
  @@index([status])
  @@map("sync_logs")
}

model ExportJob {
  id          String       @id @default(cuid())
  type        String       @default("csv")
  status      ExportStatus @default(PENDING)
  filters     Json?
  fileUrl     String?
  fileName    String?
  rowCount    Int?
  createdById String
  createdAt   DateTime     @default(now())
  completedAt DateTime?
  error       String?
  createdBy   User         @relation(fields: [createdById], references: [id])

  @@index([status])
  @@map("export_jobs")
}

model ContactSubmission {
  id           String    @id @default(cuid())
  listingId    String?
  name         String
  surname      String?
  email        String
  phone        String?
  message      String
  projectSlug  String?
  projectTitle String?
  locale       String    @default("tr")
  source       String    @default("website")
  createdAt    DateTime  @default(now())
  read         Boolean   @default(false)
  readAt       DateTime?

  @@index([createdAt])
  @@index([read])
  @@index([projectSlug])
  @@map("contact_submissions")
}

model SiteFeedbackThread {
  id          String                @id @default(cuid())
  pagePath    String
  anchorX     Float
  anchorY     Float
  hidden      Boolean               @default(false)
  hiddenAt    DateTime?
  createdById String
  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt
  messages    SiteFeedbackMessage[]
  createdBy   User                  @relation("SiteFeedbackThreadCreatedBy", fields: [createdById], references: [id], onDelete: Cascade)

  @@index([pagePath, hidden])
  @@index([updatedAt])
  @@map("site_feedback_threads")
}

model SiteFeedbackMessage {
  id        String             @id @default(cuid())
  threadId  String
  authorId  String
  content   String
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
  author    User               @relation("SiteFeedbackMessageAuthor", fields: [authorId], references: [id], onDelete: Cascade)
  thread    SiteFeedbackThread @relation(fields: [threadId], references: [id], onDelete: Cascade)

  @@index([threadId, createdAt])
  @@map("site_feedback_messages")
}

model ProjectFeature {
  id           String                      @id @default(cuid())
  listingId    String
  category     String
  icon         String
  order        Int                         @default(0)
  listing      Listing                     @relation(fields: [listingId], references: [id], onDelete: Cascade)
  translations ProjectFeatureTranslation[]

  @@map("project_features")
}

model ProjectFeatureTranslation {
  id        String         @id @default(cuid())
  featureId String
  locale    String
  title     String
  feature   ProjectFeature @relation(fields: [featureId], references: [id], onDelete: Cascade)

  @@unique([featureId, locale])
  @@map("project_feature_translations")
}

model CustomGallery {
  id           String                     @id @default(cuid())
  listingId    String
  order        Int                        @default(0)
  listing      Listing                    @relation(fields: [listingId], references: [id], onDelete: Cascade)
  translations CustomGalleryTranslation[]
  media        Media[]

  @@map("custom_galleries")
}

model CustomGalleryTranslation {
  id        String        @id @default(cuid())
  galleryId String
  locale    String
  title     String
  subtitle  String?
  gallery   CustomGallery @relation(fields: [galleryId], references: [id], onDelete: Cascade)

  @@unique([galleryId, locale])
  @@map("custom_gallery_translations")
}

model ProjectUnit {
  id           String                   @id @default(cuid())
  listingId    String
  rooms        String
  area         Int?
  price        Decimal?
  listing      Listing                  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  translations ProjectUnitTranslation[]
  media        Media[]

  @@map("project_units")
}

model ProjectUnitTranslation {
  id     String      @id @default(cuid())
  unitId String
  locale String
  title  String?
  unit   ProjectUnit @relation(fields: [unitId], references: [id], onDelete: Cascade)

  @@unique([unitId, locale])
  @@map("project_unit_translations")
}

model FloorPlan {
  id           String                 @id @default(cuid())
  listingId    String
  imageUrl     String
  area         String?
  listing      Listing                @relation(fields: [listingId], references: [id], onDelete: Cascade)
  translations FloorPlanTranslation[]

  @@map("floor_plans")
}

model FloorPlanTranslation {
  id          String    @id @default(cuid())
  floorPlanId String
  locale      String
  title       String
  floorPlan   FloorPlan @relation(fields: [floorPlanId], references: [id], onDelete: Cascade)

  @@unique([floorPlanId, locale])
  @@map("floor_plan_translations")
}

model ListingFAQ {
  id           String                  @id @default(cuid())
  listingId    String
  order        Int                     @default(0)
  listing      Listing                 @relation(fields: [listingId], references: [id], onDelete: Cascade)
  translations ListingFAQTranslation[]

  @@map("listing_faqs")
}

model ListingFAQTranslation {
  id       String     @id @default(cuid())
  faqId    String
  locale   String
  question String
  answer   String
  faq      ListingFAQ @relation(fields: [faqId], references: [id], onDelete: Cascade)

  @@unique([faqId, locale])
  @@map("listing_faq_translations")
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

enum ListingStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
  REMOVED
}

enum ArticleStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
  REMOVED
}

enum PropertyType {
  APARTMENT
  VILLA
  PENTHOUSE
  LAND
  COMMERCIAL
  OFFICE
  SHOP
  FARM
}

enum SaleType {
  SALE
  RENT
}

enum MediaType {
  IMAGE
  VIDEO
  DOCUMENT
}

enum SyncStatus {
  PENDING
  SYNCING
  SUCCESS
  FAILED
}

enum ExportStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}
